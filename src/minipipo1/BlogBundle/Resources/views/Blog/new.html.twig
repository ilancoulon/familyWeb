{% extends "minipipo1BlogBundle::layout.html.twig" %}

{% block title %}
	Rédiger un article - {{ parent() }}
{% endblock %}
        
{% block _form_contenu %}
        <textarea id="{{ form.contenu.vars.id }}" name="{{ form.contenu.vars.full_name }}">{% for var in form.contenu.vars|keys %}{{ var }}|{% endfor %}</textarea>
{% endblock %}

{% block minipipoblog_body %}
        <h2>
                <a href="#">
                        {% if article.id %}
                                Éditer un article
                        {% else %}
                                Rédiger un article
                        {% endif %}
                </a>
        </h2>
        <form action="#" method="post" {{ form_enctype(form) }}>
                {{ form_errors(form) }}
                <div>
                        <span style="text-decoration: underline">{{ form_label(form.titre, "Titre") }} :</span>
                        {{ form_errors(form.titre) }}
                        {{ form_widget(form.titre) }}
                </div>
                <div>
                        {{ form_errors(form.contenu) }}
                        {{ form_widget(form.contenu) }}
                </div>
                <div>
                        <span style="text-decoration: underline">{{ form_label(form.auteur, "Auteur :") }}</span>
                        {{ form_errors(form.auteur) }}
                        {{ form_widget(form.auteur) }}
                </div>
                {{ form_rest(form) }}
                <p>
                        <button type="submit">Publier</button>
                </p>
        </form>
        

{% endblock %}
        
{% block javascripts %}
        <script type="text/javascript" src="{{ asset('bundles/minipipo1blog/js/tiny_mce/tiny_mce.js') }}"></script>
        <script type="text/javascript">
                tinyMCE.init({
                        mode : "textareas",
                        theme : "advanced",
                        width : "568",
                        language : "fr",
                        relative_urls : false,
                        plugins : "emotions, autoresize, fullscreen, jbimages",
                        // Theme options
                        theme_advanced_buttons1 : "bold,italic,underline,strikethrough,|,sub,sup,|,justifyleft,justifycenter,justifyright,justifyfull,|,forecolor,backcolor,|,fontselect,fontsizeselect",
                        theme_advanced_buttons2 : "bullist,numlist,|,outdent,indent,|,undo,redo,|,link,unlink,image,help,code,|,charmap,emotions,|,fullscreen,|,jbimages",
                        theme_advanced_buttons3 : "",
                        theme_advanced_toolbar_location : "top",
                        theme_advanced_toolbar_align : "left",
                        theme_advanced_resizing_min_height : "800"
                });
        </script>
{% endblock %}